<form>
  <header class="dialog-header">
    <h1>Change Nickname</h1>
  </header>

  <div class="dialog-content">
    <table>
      <tbody>
        <tr>
          <th>Nickname</th>
          <td>
            <input type="text" name="nickname" autofocus>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <footer class="dialog-footer control-bar">
    <div class="primary-controls">
      <button type="submit">
        Change
      </button>
    </div>

    <div class="secondary-controls">
      <button data-modal-dismiss type="button">
        Cancel
      </button>
    </div>
  </footer>
</form>
